    environment {
        DOCKER_IMAGE = "booking-app"
        VERSION = "v1.0.0"
        CONTAINER_NAME = "booking-rel-v1-0-0"
    }
        stage('Run') {
            steps {
                bat """
                    docker rm -f ${CONTAINER_NAME} 2>nul || echo OK
                    docker run -d --name ${CONTAINER_NAME} -p 8084:80 %DOCKER_IMAGE%:%VERSION%
                    timeout /t 10
                """
            }
        }

       
